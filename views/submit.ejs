nav {
  width: 100%;
  text-align: center;
  background-color: var(--light-purple);
  position: fixed;
  padding: 0.5em;
  top: 0;
}

nav a {
  text-decoration: none;
  font-size: 2.5em;
  font-family: "lato", sans-serif;
  color: var(--dark-purple);
}

main {
  width: 80%;
  margin: 0 auto;
  padding-top: 15em;
  font-family: "lato", sans-serif;
}

main > h2 {
  font-size: 3.5em;
  font-family: "Anonymous Pro", serif;
  color: var(--purple);
  text-align: center;
}

form {
  width: 90%;
  height: auto;
  display: flex;
  flex-direction: column;
  margin-top: 5rem;
}

form > input {
  margin-bottom: 1.4em;
  font-size: 1.8em;
  width: 100%;
  border: none;
  outline: none;
  padding: 10px;
}

input:focus {
  border-bottom: 2px solid var(--purple);
  height: -2px;
}

button {
  font-size: 1.8em;
  width: 50%;
  cursor: pointer;
  margin: 0 auto;
  border: none;
  outline: none;
  background-color: var(--dark-purple);
  color: white;
  border-radius: 10px;
  padding: 10px;
}

button:hover,
button:focus {
  box-shadow: 1.5px 1.5px 25px var(--dark-purple);
}

.message {
  font-size: 1.5em;
  margin-bottom: 1em;
  text-align: center;
}

section {
  text-align: center;
  margin-top: 2em;
}

section > p {
  font-size: 1.5em;
  color: grey;
}

section a {
  text-decoration: none;
  color: var(--dark-purple);
}

@media screen and (min-width: 600px) {
  main {
    width: 45%;
  }
}

@media screen and (min-width: 800px) {
  main {
    width: 35%;
  }

  form {
    width: 100%;
  }
}

