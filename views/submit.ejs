        <h2>Log in</h2>
        <form action="/i" method="post">
            <input required placeholder="E-mail" type="email" name="username">
            <input required placeholder="Password" type="password" name="password">
            <button type="submit" name="btn">
                Log In
            </button>
        </form>
        <section>
            <p>Not registered yet? <a href="/register">Register</a></p>
        </section>
    </main>
